{
  "manifest_version": 2,
  "name": "Pinkput for Pinboard",
  "short_name": "Pinkput",
  "version": "2.0.0",
  "description": "Light-weight chrome extension for Pinboard. Fork of pinput by @1000ch & @t32k",
  "author": "LiquidHelium",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "html/background.html",
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon38.png",
    "default_title": "Pinput for Pinboard",
    "default_popup": "html/popup.html"
  },
  "options_page": "html/options.html",
  "commands": {
    "direct-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Bookmark directly without opening popup window."
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Open popup window."
    }
  },
  "offline_enabled": false
}
